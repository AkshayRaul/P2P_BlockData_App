<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shwetha.blockdata.SmartContract">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/heading"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="SMART CONTRACT"/>
<TextView
    android:id="@+id/content"
    android:padding="10dp"
    android:layout_below="@+id/heading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome to our application. If you continue to use this feature, you are agreeing to comply with and be bound by the following terms and conditions of use, which together with our privacy policy govern [business name]'s relationship with you in relation to this application.If and=y misue of a peers data is found out strictly action would be taken.The rating would not only be affected but the peer will never be a part of any network and would face heavy consequences of the same "/>
 <CheckBox
     android:layout_below="@+id/content"
     android:id="@+id/checkbox"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Terms and Condtions Agreed"
     android:onClick="onCheckboxClicked"/>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
